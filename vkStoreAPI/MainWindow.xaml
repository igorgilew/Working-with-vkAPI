<Window x:Class="vkStoreAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vkStoreAPI"
        mc:Ignorable="d"
        Title="vkGoods" Height="600" Width="1000" Closing="Window_Closing" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="62*"/>
            <RowDefinition Height="273*"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="horSp1" Orientation="Horizontal" Background="WhiteSmoke" Grid.Row="0">
            <Label x:Name="myGoods" Content="Мои сообщества" HorizontalAlignment="Center" Margin="400,27,0,27" VerticalAlignment="Center" FontSize="32" Height="52" Width="275"/>
        </StackPanel>
        <StackPanel x:Name="spGroups" Grid.Row="1">
            <Label x:Name="titleGroups" FontSize="20">Выберите одно из своих сообществ:</Label>
            <ListBox x:Name="lbGroupd"></ListBox>
        </StackPanel>

    </Grid>
</Window>

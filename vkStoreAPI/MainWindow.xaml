<Window x:Class="vkStoreAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vkStoreAPI"
        mc:Ignorable="d"
        Title="vkGoods" Height="600" Width="1000" Closing="Window_Closing" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="62*"/>
            <RowDefinition Height="273*"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="horSp1" Orientation="Horizontal" Background="WhiteSmoke">
            <Label x:Name="myGoods" Content="Мои товары" HorizontalAlignment="Left" Margin="44,0,0,0" VerticalAlignment="Center" FontSize="32" Height="52" Width="191"/>
            <Button x:Name="btnAddProduct" Content="Добавить товар" HorizontalAlignment="Left" Margin="500,0,0,0" VerticalAlignment="Center" Width="191" Height="42" FontSize="24" Click="btnAddProduct_Click"/>
        </StackPanel>


    </Grid>
</Window>
